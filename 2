#include <iostream>
#include <cmath>

using namespace std;

// Функция для вычисления времени полета T в зависимости от угла alpha
double timeOfFlight(double alpha, double V, double g) {
    return (2 * V * sin(alpha)) / g;
}

// Производная функции времени полета по alpha
double derivativeTimeOfFlight(double alpha, double V, double g) {
    return (2 * V * cos(alpha)) / g;
}

// Метод Ньютона для нахождения угла alpha
double newtonMethod(double V, double T, double g, double initialGuess, double tolerance) {
    double alpha = initialGuess;
    double delta = 1.0;
    
    while (fabs(delta) > tolerance) {
        double f = timeOfFlight(alpha, V, g) - T;
        double df = derivativeTimeOfFlight(alpha, V, g);
        delta = f / df;
        alpha -= delta;
    }
    
    return alpha;
}

int main() {
    double V, T, g, initialGuess, tolerance;

    // Ввод данных с клавиатуры
    cout << "Введите начальную скорость V: ";
    cin >> V;

    cout << "Введите время полета T: ";
    cin >> T;

    cout << "Введите ускорение свободного падения g: ";
    cin >> g;

    cout << "Введите начальное предположение для alpha (в радианах): ";
    cin >> initialGuess;

    cout << "Введите точность tolerance: ";
    cin >> tolerance;

    // Вычисление угла alpha
    double alpha = newtonMethod(V, T, g, initialGuess, tolerance);
    
    cout << "Угол alpha: " << alpha << " радиан" << endl;
    cout << "Угол alpha: " << alpha * 180 / M_PI << " градусов" << endl;
    
    return 0;
}
