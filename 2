#include <iostream>
#include <cmath>

const double g = 9.81;

double calculate_range(double V, double alpha) {
    return (V * V * sin(2 * alpha)) / g;
}

int main() {
    double V, alpha;
    std::cout << "Введите начальную скорость V: ";
    std::cin >> V;
    std::cout << "Введите угол alpha (в радианах): ";
    std::cin >> alpha;

    double L = calculate_range(V, alpha);

    std::cout << "Дальность полета L: " << L << " метров" << std::endl;
    return 0;
}
