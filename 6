#include <iostream>
#include <cmath>

using namespace std;

// Функция для вычисления времени T
double calculateTime(double V, double U, double distance) {
    return distance / (V - U);
}

// Метод итераций для нахождения времени T
double iterationMethod(double V, double U, double distance, double epsilon) {
    double T_prev = 0;
    double T = distance / (V - U); // Начальное приближение

    while (abs(T - T_prev) > epsilon) {
        T_prev = T;
        T = distance / (V - U); // Обновляем значение T
    }

    return T;
}

int main() {
    double V, U, distance;

    // Ввод скорости лодки, скорости течения и расстояния пользователем
    cout << "Введите скорость лодки V: ";
    cin >> V;
    cout << "Введите скорость течения U: ";
    cin >> U;
    cout << "Введите расстояние между пунктами: ";
    cin >> distance;

    // Точность для метода итераций
    double epsilon = 1e-6;

    // Нахождение времени T с использованием метода итераций
    double T = iterationMethod(V, U, distance, epsilon);

    // Вывод результата
    cout << "Время T, необходимое для перемещения лодки между пунктами: " << T << " с" << endl;

    return 0;
}
